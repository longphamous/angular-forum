{
  "name": "angular-forum",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "projects/frontend/angular-forum/src",
  "prefix": "",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "options": {
        "outputPath": {
          "base": "dist/angular-forum",
          "browser": ""
        },
        "polyfills": ["zone.js"],
        "tsConfig": "projects/frontend/angular-forum/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "public"
          },
          {
            "glob": "**/*",
            "input": "projects/frontend/angular-forum/src/assets/i18n",
            "output": "assets/i18n"
          }
        ],
        "styles": ["projects/frontend/angular-forum/src/styles.scss"],
        "scripts": [],
        "stylePreprocessorOptions": {
          "sass": {
            "silenceDeprecations": ["import"]
          }
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kB",
              "maximumError": "2MB"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kB",
              "maximumError": "8kB"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production",
      "outputs": ["{options.outputPath.base}"]
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "angular-forum:build:production"
        },
        "development": {
          "buildTarget": "angular-forum:build:development",
          "port": 4201
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n"
    },
    "i18n-extract": {
      "command": "transloco-keys-manager extract --project angular-forum"
    },
    "i18n-find": {
      "command": "transloco-keys-manager find --project angular-forum"
    },
    "test": {
      "executor": "@angular/build:karma",
      "options": {
        "polyfills": ["zone.js", "zone.js/testing"],
        "tsConfig": "projects/frontend/angular-forum/tsconfig.spec.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "public"
          }
        ],
        "styles": ["projects/frontend/angular-forum/src/styles.scss"],
        "scripts": []
      }
    },
    "lint": {
      "executor": "@angular-eslint/builder:lint",
      "options": {
        "lintFilePatterns": [
          "projects/frontend/angular-forum/src/**/*.ts",
          "projects/frontend/angular-forum/src/**/*.html"
        ]
      },
      "outputs": ["{options.outputFile}"]
    }
  }
}
