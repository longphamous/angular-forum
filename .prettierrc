{
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "quoteProps": "consistent",
    "printWidth": 120,
    "tabWidth": 4,
    "bracketSpacing": true,
    "endOfLine": "auto",
    "plugins": ["prettier-plugin-organize-attributes", "prettier-plugin-tailwindcss"],
    "attributeSort": "asc",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": ["*.component.html"],
            "options": {
                "parser": "angular"
            }
        }
    ]
}
